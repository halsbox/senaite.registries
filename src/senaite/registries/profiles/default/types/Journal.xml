<object name="Journal" meta_type="Dexterity FTI"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="senaite.registries">

  <property name="title" i18n:translate="">Journal</property>
  <property name="description" i18n:translate="">A Journal record.</property>
  <property name="icon_expr">senaite_theme/icon/journal</property>
  <property name="factory">Journal</property>
  <property name="add_view_expr">string:${folder_url}/++add++Journal</property>
  <property name="link_target"/>
  <property name="immediate_view">view</property>
  <property name="global_allow">False</property>
  <property name="filter_content_types">False</property>
  <property name="allowed_content_types"/>
  <property name="allow_discussion">False</property>
  <property name="default_view">view</property>
  <property name="view_methods">
    <element value="view"/>
  </property>
  <property name="default_view_fallback">False</property>
  <property name="add_permission">senaite.registries.permissions.AddJournal</property>
  <property name="schema">senaite.registries.content.journal.IJournalSchema</property>
  <property name="klass">senaite.registries.content.journal.Journal</property>
  <property name="behaviors">
    <element value="plone.app.dexterity.behaviors.metadata.IBasic"/>
    <element value="plone.app.referenceablebehavior.referenceable.IReferenceable"/>
    <element value="bika.lims.interfaces.IAutoGenerateID"/>
    <element value="bika.lims.interfaces.IMultiCatalogBehavior"/>
  </property>
  <alias from="view" to="view"/>
  <alias from="edit" to="@@edit"/>
  <action title="View"
          action_id="view"
          category="object"
          url_expr="string:${object_url}"
          visible="True">
    <permission value="View"/>
  </action>
  <action title="Edit"
          action_id="edit"
          category="object"
          url_expr="string:${object_url}/edit"
          visible="True">
    <permission value="Modify portal content"/>
  </action>
</object>