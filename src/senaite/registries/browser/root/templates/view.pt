<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
     i18n:domain="senaite.registries"
     metal:use-macro="here/main_template/macros/master">
<head>
  <metal:block fill-slot="senaite_legacy_resources"
       tal:define="portal context/@@plone_portal_state/portal;" />
</head>
<body>
<metal:content fill-slot="content-core">
  <div>
    <div class="row registry-tiles">
      <tal:loop tal:repeat="reg view/registries">
        <div class="col-xs-6 col-sm-4 col-md-3 text-center registry-tile"
             style="margin-bottom: 24px;">
          <a tal:attributes="href reg/url" style="text-decoration: none;">
            <img tal:attributes="src reg/icon; alt reg/title"
                style="width: 96px; height: 96px; display: block; margin: 10px auto;"/>
            <div style="font-weight: 600; margin-top: 6px; color: var(--bs-body-color, #333);"
                 tal:content="reg/title">Journals
            </div>
          </a>
          <div class="text-muted small"
               tal:condition="reg/description"
               tal:content="reg/description"></div>
        </div>
      </tal:loop>

      <tal:empty tal:condition="not:view/registries">
        <p class="text-muted" i18n:translate="">No registries available.</p>
      </tal:empty>
    </div>
  </div>
</metal:content>
</body>
</html>
